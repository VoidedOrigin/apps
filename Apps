    <script>
        // --- 3D TILT EFFECT LOGIC ---
        const cards = document.querySelectorAll('.card-wrap');

        cards.forEach(card => {
            card.addEventListener('mousemove', (e) => {
                const rect = card.getBoundingClientRect();
                // Calculate mouse position within the card
                const x = e.clientX - rect.left;
                const y = e.clientY - rect.top;
                
                // Calculate rotation (center of card is 0)
                const xPct = x / rect.width;
                const yPct = y / rect.height;
                
                // Max rotation degrees
                const xRot = (yPct - 0.5) * 20; // Rotate X axis based on Y position (tilt up/down)
                const yRot = (xPct - 0.5) * -20; // Rotate Y axis based on X position (tilt left/right)

                const innerCard = card.querySelector('.card');
                innerCard.style.transform = `rotateX(${xRot}deg) rotateY(${yRot}deg)`;
            });

            card.addEventListener('mouseleave', () => {
                const innerCard = card.querySelector('.card');
                // Reset smoothly
                innerCard.style.transition = 'transform 0.5s ease';
                innerCard.style.transform = `rotateX(0deg) rotateY(0deg)`;
                setTimeout(() => {
                    innerCard.style.transition = 'transform 0.1s ease-out';
                }, 500);
            });
            
            // Cursor Hover Interactions
            card.addEventListener('mouseenter', () => cursor.classList.add('hovered'));
            card.addEventListener('mouseleave', () => cursor.classList.remove('hovered'));
        });

        // --- BUTTON INTERACTION ---
        document.querySelectorAll('button, a').forEach(el => {
            el.addEventListener('mouseenter', () => cursor.classList.add('hovered'));
            el.addEventListener('mouseleave', () => cursor.classList.remove('hovered'));
        });

        // --- CUSTOM CURSOR ---
        const cursor = document.getElementById('cursor');
        
        // Smooth Cursor Follow
        let mouseX = 0, mouseY = 0;
        let cursorX = 0, cursorY = 0;

        document.addEventListener('mousemove', (e) => {
            mouseX = e.clientX;
            mouseY = e.clientY;
        });

        function animateCursor() {
            // Lerp (Linear Interpolation) for smoothness
            const dx = mouseX - cursorX;
            const dy = mouseY - cursorY;
            
            cursorX += dx * 0.15;
            cursorY += dy * 0.15;
            
            cursor.style.left = cursorX + 'px';
            cursor.style.top = cursorY + 'px';
            
            requestAnimationFrame(animateCursor);
        }
        animateCursor();

        // --- TAB SWITCHING ---
        function openTab(tabId, btn) {
            // Hide all grids
            document.querySelectorAll('.grid-container').forEach(grid => {
                grid.classList.remove('active');
            });
            
            // Show target grid
            const target = document.getElementById(tabId);
            target.classList.add('active');
            
            // Re-trigger animations by cloning and replacing logic (trick to restart CSS anims)
            target.querySelectorAll('.card-wrap').forEach(el => {
                el.style.animation = 'none';
                el.offsetHeight; /* trigger reflow */
                el.style.animation = null; 
            });

            // Update Buttons
            document.querySelectorAll('.nav-btn').forEach(b => b.classList.remove('active'));
            btn.classList.add('active');
        }
    </script>
